modules = ["python-3.12", "web"]
run = "pip install -r requirements.txt"

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssh_gssapi", "pgadmin4", "tcl", "tk", "zlib"]

[deployment]
run = ["sh", "-c", "pip install -r requirements.txt"]

[workflows]
runButton = "Django Development Server"

[[workflows.workflow]]
name = "Django Development Server"
author = 45763594
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"

[[ports]]
localPort = 5000
externalPort = 80
